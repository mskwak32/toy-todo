<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Toy_todo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolbarBackArrowColor">
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="cardTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/green_800</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="detailTaskTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="background">@drawable/detail_textview_bg</item>
        <item name="android:textColor">@color/green_800</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>